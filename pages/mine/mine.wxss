/* pages/mine/mine.wxss */

.page {
  display: flex;
  flex-direction: column;
  margin-bottom: 120rpx; /*解决tabbar遮住部分内容问题*/
  padding: 0 30rpx;
}

.item {
  display: flex;
  background-color: #f0f9fa;
  width: 100%;
  height: 180rpx;
  border-radius: 20rpx;
  border: 3rpx solid #eee;
  margin-top: 30rpx;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #aaa;
}

.box1{
  align-items: center;
  padding: 30rpx;
}

.name{
  font-size: 40rpx;
  color: #557d8a;
  margin-right: 30rpx;
}

.hd{
  font-size: 40rpx;
  color: #557d8a;
  margin-right: 30rpx;
}

.bd{
  margin-right: 20rpx;
}

.box2{
  background-color: #f0f9fa;
  border-radius: 20rpx;
  border: 3rpx solid #eee;
  margin-top: 30rpx;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #aaa;
  height: 90rpx;
  width: 100%;
  line-height: 90rpx;/*让文字行间距等于height，实现垂直居中*/
  text-align: center;
}

.box5{
  background-color: #f0f9fa;
  border-radius: 20rpx;
  border: 3rpx solid #eee;
  margin-top: 30rpx;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #aaa;
  height: 300rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 30rpx;
}